{
  "name": "drawn-together",
  "description": "iSketch upgraded.",
  "version": "0.3.0",
  "author": "https://github.com/icedtrees/drawn-together/graphs/contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/icedtrees/drawn-together.git"
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('build', { recursive: true, force: true })\"",
    "build:frontend": "esbuild --bundle --outdir=build/public \"application.ts\" \"modules/client/**/*.png\" --loader:.png=copy --loader:.ttf=file --loader:.eot=file --loader:.woff=file --loader:.svg=file --loader:.woff2=file",
    "build:backend": "node esbuild.config.mjs build",
    "build": "npm run clean && npm run build:frontend && npm run build:backend",
    "dev:frontend": "esbuild --bundle --outdir=build/public \"application.ts\" \"modules/client/**/*.png\" --loader:.png=copy --loader:.ttf=file --loader:.eot=file --loader:.woff=file --loader:.svg=file --loader:.woff2=file --watch=forever",
    "dev:backend": "node esbuild.config.mjs watch",
    "dev": "npm run clean && npm run dev:frontend & npm run dev:backend",
    "start": "npm run build && node build/src/server.js"
  },
  "dependencies": {
    "async": "^1.3.0",
    "body-parser": "^1.13.1",
    "chalk": "^1.1.0",
    "clj-fuzzy": "^0.4.1",
    "compression": "^1.5.0",
    "connect-flash": "~0.1.1",
    "consolidate": "~0.13.1",
    "cookie-parser": "^1.3.2",
    "esbuild": "0.19.5",
    "express": "^4.13.1",
    "express-session": "^1.11.3",
    "font-awesome": "~4.4.0",
    "glob": "^5.0.13",
    "helmet": "~0.9.1",
    "lodash": "^3.10.0",
    "method-override": "^2.3.3",
    "morgan": "^1.6.1",
    "multer": "0.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve-favicon": "^2.3.0",
    "socket.io": "^1.3.5",
    "swig": "^1.4.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@es-exec/esbuild-plugin-start": "^0.0.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
